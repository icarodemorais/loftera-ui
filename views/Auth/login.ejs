<% include ../Partials/HeaderRoot  %>
<div class="wrapper-page">
    <div class="card">
        <div class="card-body">
            <div class="p-3">
                <h4 class="text-muted font-18 m-b-5 text-center">Seja bem vindo</h4>
                <p class="text-muted text-center">Faça o login para continuar</p>
                <form class="form-horizontal m-t-30" action="/auth" method="POST">
                    <div class="form-group">
                        <div class="alert alert-info" role="alert">
                            <strong>Lembre-se:</strong> seu login é seu e-mail e sua senha é seu cpf.
                        </div>
                    </div>
                    <% include ../Partials/messages  %>
                    <div class="form-group">
                        <label for="email">Login</label>
                        <input type="text" class="form-control" required data-parsley-minlength="3" name="login"
                            id="login" placeholder="Login" value="teste@teste.com">
                    </div>
                    <div class="form-group">
                        <label for="password">Senha</label>
                        <input type="password" class="form-control" name="password" id="password" required
                            data-parsley-minlength="3" placeholder="Senha" value="53114711235">
                    </div>
                    <div class="form-group row m-t-20">
                        <div class="col-12 text-right">
                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <div class="m-t-40 text-center">
        <p class="text-white">Não fez seu cadastro ainda ? <a href="/pages-register" class="text-primary-new"> Faça agora! </a>
        </p>
        <p class="text-white">© 2020 Loftera. Implemented by <a href="https://github.com/icarodemorais" class="text-primary-new" target="_blank">@icaro</a> and <a href="https://github.com/CinthiaYamamotoMa" class="text-primary-new">@cinthia</a></p>
    </div>

</div>

<% include ../Partials/FooterRoot  %>
<script src="public/plugins/parsleyjs/parsley.min.js"></script>
